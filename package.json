{
  "name": "claude-code-chat",
  "version": "1.0.0",
  "description": "Electron chat app for Claude Code SDK",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "install-claude": "npm install -g @anthropic-ai/claude-code",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild"
  },
  "keywords": [
    "electron",
    "claude",
    "code",
    "anthropic",
    "ai"
  ],
  "author": "Claude Code Chat",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "better-sqlite3": "^11.10.0",
    "diff": "^5.1.0",
    "node-pty": "^1.0.0",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.claudecode.chat",
    "productName": "Claude Code Chat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
