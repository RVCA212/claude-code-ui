{
  "name": "claude-code-chat",
  "version": "1.0.0",
  "description": "Electron chat app for Claude Code SDK",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "install-claude": "npm install -g @anthropic-ai/claude-code",
    "rebuild": "electron-builder install-app-deps --arch=arm64",
    "postinstall": "electron-builder install-app-deps --arch=arm64"
  },
  "keywords": [
    "electron",
    "claude",
    "code",
    "anthropic",
    "ai"
  ],
  "author": "Claude Code Chat",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@vscode/codicons": "^0.0.36",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@monaco-editor/loader": "^1.5.0",
    "better-sqlite3": "^11.10.0",
    "diff": "^5.2.0",
    "monaco-editor": "^0.52.2",
    "node-mac-permissions": "^2.5.0",
    "node-pty": "^1.0.0",
    "run-applescript": "^7.0.0",
    "systeminformation": "^5.27.6",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.claudecode.chat",
    "productName": "Claude Code Chat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon-large.png",
      "extendInfo": {
        "LSUIElement": false,
        "LSBackgroundOnly": false
      }
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon-large.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon-large.png"
    }
  }
}
